<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/timeline_shape" >

    <TextView
        android:id="@+id/textTimeline_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="This is a new message read by Mr.Otis"
        android:textColor="#6f7881"
        android:paddingBottom="8dp"
        android:textSize="12sp" />

    <TextView
        android:layout_below="@+id/textTimeline_message"
        android:id="@+id/textTimeline_messageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="5 hours ago"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

</RelativeLayout>