<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/app_white"
    android:orientation="vertical"
    android:paddingRight="2dp" >

    <RelativeLayout
        android:id="@+id/relativeDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/profile_menu_line" >

        <ImageView
            android:id="@+id/imagePhoto"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_shape_white"
            android:src="@drawable/avatar" />

        <ImageView
            android:id="@+id/imageDrawerMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imagePhoto"
            android:layout_marginRight="14dp"
            android:background="@drawable/menu_nav_selector"
            android:clickable="true"
            android:src="@drawable/icon_member_left" />

        <TextView
            android:id="@+id/textDrawerProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagePhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Mama Boi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/app_white" />

        <TextView
            android:id="@+id/textDrawerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDrawerProfileName"
            android:layout_centerHorizontal="true"
            android:text="0724 365 248 | Group Admin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#939393"
            android:textSize="13sp" />

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textDrawerPhone"
            android:choiceMode="singleChoice"
            android:divider="@color/app_white"
            android:dividerHeight="0.7dp"
            tools:listitem="@layout/drawer_list_item" />
        
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="0.7dp"
            android:layout_alignTop="@+id/left_drawer"
            android:background="@color/app_white" />
    </RelativeLayout>

</LinearLayout>